{
    "plugins": ["plugins/markdown"],
    "opts": {
        "recurse": true,
        "useLongnameInNav": true,
        "template": "node_modules/clean-jsdoc-theme",
        "destination": "docs/",
        "theme_opts": {
            "idInHeadings": true,
            "hardwrap": false,
            "default_theme": "fallback-dark",
            "homepageTitle": "SkinkJS",
            "static_dir": ["./static/"],
            "favicon": "static/skinktools_logo.png",
            "shouldRemoveScrollbarStyle": false,
            "title": "<div class='sidebar-section-title title-sidebar'><a href='/'><div class='img'></div><strong>SkinkJS</strong></a></div>",
            "menu": [
                {
                    "title": "Home",
                    "link": "/"
                }
            ],
            "include_css": [
                "./static/custom.css"
            ],
            "include_js": [
                "./static/keybinds.js"
            ]
        }
    },
    "source": {
        "exclude": ["node_modules", "docs", "out"],
        "include": ["package.json", "README.md", "src"],
        "includePattern": ".+\\.(js(doc|x)?|mjs)$",
        "excludePattern": "((^[_.])|node_modules/|docs)"
    },

    "sourceType": "module",
    "tags": {
        "allowUnknownTags": true,
        "dictionaries": ["jsdoc","closure"]
    },
    "templates": {
        "cleverLinks": true,
        "monospaceLinks": true
    },
    "readme": "./README.md",
    "recurse": true

}